<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deitel.flagquiz.WelcomeActivity">

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:elevation="60dp"
        android:onClick="onClickBtnPlay"
        android:text="@string/btnWelcomeScreen"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="545dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="parent" />


    <ImageView
        android:id="@+id/imageViewWelcome"
        android:layout_width="395dp"
        android:layout_height="529dp"
        android:src="@drawable/catapillersplash"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
</android.support.constraint.ConstraintLayout>
